RewriteEngine On

# Route API proxy under public to its entry file
RewriteRule ^api/caddy(.*)$ api/caddy/index.php$1 [QSA,L]

# Friendly API endpoint: /api/config -> /api/caddy/index.php/config
RewriteRule ^api/config/?$ api/caddy/index.php/config/ [QSA,L]

# Domain root shortcut: /config -> /api/caddy/index.php/config
RewriteRule ^config/?$ api/caddy/index.php/config/ [QSA,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# Route everything else to public/index.php (front controller)
RewriteRule ^(.*)$ index.php [QSA,L]

# Allow access to js and uploads directories
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>
